==== Before Tagging


==== Installation

VERSION0=x/1.0.rc1
VERSION=${VERSION0##*/}

SSM_BASE=ENV
SSM_NAME=rde
SSM_X=${VERSION0%%/*}
[[ x${SSM_X} == x${VERSION0} ]] && SSM_X="" || SSM_X="${SSM_X}/"

SSM_BNDL=${SSM_BASE}/${SSM_X}${SSM_NAME}/${VERSION}

BASE_SSM_DIR=/users/dor/armn/env/SsmBundles/${SSM_BASE}
BASE_INSTALL_DIR=${BASE_SSM_DIR}/d/${SSM_X}${SSM_NAME}
BASE_SSM_BNDL_DIR=${BASE_SSM_DIR}/${SSM_X}${SSM_NAME}

VERSIONGIT=${SSM_NAME}_${VERSION}

cd $BASE_INSTALL_DIR
git clone ssh://localhost/users/dor/armn/env/GitDepots/${SSM_NAME}.git $VERSION
cd $VERSION
git checkout -b tmp $VERSIONGIT
rm -rf .git

cd $BASE_SSM_BNDL_DIR
cat $BASE_INSTALL_DIR/$VERSION/etc/ssm/profile.sh | \
    sed "s|DEV_BNDL|${SSM_BNDL}|" | \
    sed "s|DEV_DIR|${BASE_INSTALL_DIR}/${VERSION}|" > ${VERSION}.sh
